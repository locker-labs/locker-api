{
	"name": "locker-api",
	"version": "0.1.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chainrule-labs/locker-api.git"
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"commit": "git-cz",
		"dev": "nodemon --exec ts-node src/index.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint:check": "eslint . --ext .js,.ts",
		"lint:fix": "npx eslint . --ext .js,.ts --fix",
		"migrate": "pnpm tsx ./drizzle/migrate.ts",
		"migration:generate": "pnpm drizzle-kit generate:pg",
		"prepare": "husky",
		"start": "node dist/app/index.js",
		"test": "jest --coverage",
		"test:match": "jest --verbose"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"@clerk/clerk-sdk-node": "^5.0.3",
		"cookies": "^0.9.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.30.10",
		"express": "^4.19.2",
		"morgan": "^1.10.0",
		"pg": "^8.11.5",
		"winston": "^3.13.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/cookies": "^0.9.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.12.7",
		"@types/pg": "^8.11.5",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"drizzle-kit": "^0.20.17",
		"eslint": "^8.57.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"nodemon": "^3.1.0",
		"pnpm": "^9.0.6",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.8.2",
		"typescript": "^5.4.5"
	}
}
