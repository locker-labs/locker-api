{
	"name": "locker-api",
	"version": "0.1.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chainrule-labs/locker-api.git"
	},
	"scripts": {
		"commit": "git-cz",
		"dev": "nodemon --exec ts-node src/index.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint:check": "eslint . --ext .js,.ts",
		"lint:fix": "npx eslint . --ext .js,.ts --fix",
		"migrate": "pnpm tsx ./drizzle/migrate.ts",
		"migration:generate": "pnpm drizzle-kit generate:pg",
		"migration:blank": "drizzle-kit generate:pg --custom",
		"prepare": "husky",
		"stream:create": "tsx scripts/gen-moralis-stream.ts",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"test:match": "jest --verbose"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"@clerk/clerk-sdk-node": "^5.0.3",
		"@supabase/supabase-js": "^2.43.5",
		"@zerodev/ecdsa-validator": "^5.3.1",
		"@zerodev/permissions": "5.3.2-alpha-0",
		"@zerodev/sdk": "^5.3.2",
		"big.js": "^6.2.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cookies": "^0.9.1",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.30.10",
		"express": "^4.19.2",
		"moralis": "^2.26.1",
		"morgan": "^1.10.0",
		"permissionless": "^0.1.29",
		"pg": "^8.11.5",
		"postgres": "^3.4.4",
		"resend": "^3.2.0",
		"viem": "^2.11.1",
		"web3": "^4.8.0",
		"winston": "^3.13.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.5",
		"@babel/plugin-proposal-decorators": "^7.24.7",
		"@babel/preset-env": "^7.24.5",
		"@babel/preset-typescript": "^7.24.1",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@moralisweb3/streams-typings": "^1.0.7",
		"@types/big.js": "^6.2.2",
		"@types/cookies": "^0.9.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.12.7",
		"@types/pg": "^8.11.5",
		"@types/supertest": "^6.0.2",
		"@types/web3": "^1.2.2",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"babel-jest": "^29.7.0",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"drizzle-kit": "^0.20.17",
		"eslint": "^8.57.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"nodemon": "^3.1.0",
		"pnpm": "^9.0.6",
		"prettier": "^3.2.5",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.8.2",
		"typescript": "^5.4.5"
	}
}
